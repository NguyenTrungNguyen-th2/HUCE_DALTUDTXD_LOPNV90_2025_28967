<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\resources\style\Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Margin="6"
                Orientation="Vertical">
        <GroupBox Margin="6" Header="Main Rebar">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">Number of X Rebar</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NumberOfXRebar}" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">X Diameter</TextBlock>
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Diameters}" SelectedItem="{Binding XDiameter}" DisplayMemberPath="Name" VerticalAlignment="Center" HorizontalAlignment="Stretch"></ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">Number of Y Rebar</TextBlock>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NumberOfYRebar}" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">X Diameter</TextBlock>
                <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Diameters}" SelectedItem="{Binding YDiameter}" DisplayMemberPath="Name" VerticalAlignment="Center" HorizontalAlignment="Stretch"></ComboBox>
            </Grid>
        </GroupBox>

        <GroupBox Margin="6" Header="Stirrup">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">Spacing</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding StirrupSpacing}" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">X Diameter</TextBlock>
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Diameters}" SelectedItem="{Binding StirrupDiameter}" DisplayMemberPath="Name" VerticalAlignment="Center" HorizontalAlignment="Stretch"></ComboBox>

            </Grid>
        </GroupBox>

        <StackPanel Height="40" DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Command="{Binding OkCommand}" Margin="6" Width="68" Height="22">OK</Button>
            <Button Command="{Binding CloseCommand}" Margin="6" Width="68" Height="22">Cancel</Button>
        </StackPanel>
    </StackPanel>

</Window>
