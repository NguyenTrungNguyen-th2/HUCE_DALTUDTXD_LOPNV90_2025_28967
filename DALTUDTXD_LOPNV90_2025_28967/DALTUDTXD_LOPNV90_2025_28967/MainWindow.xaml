<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967"
        mc:Ignorable="d"
        Title="Trang chủ" Height="800" Width="1200" Background="#C2E2FA">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/style/Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl >
       
        <TabItem Header="Vật Liệu" Background="#8C00FF" >
            <Grid Margin="10">
                <TextBlock Text="Thông Tin Vật Liệu" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <GroupBox Header="Thông số vật liệu" Margin="0,60,0,0" VerticalAlignment="Top">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock Text="Mác bê tông:"/>
                            <ComboBox Name="cbbmacbt" Width="160" HorizontalContentAlignment="Center">
                                <ComboBoxItem IsSelected="True">B15</ComboBoxItem>
                                <ComboBoxItem>B20</ComboBoxItem>
                                <ComboBoxItem>B25</ComboBoxItem>
                                <ComboBoxItem>B30</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text="Cường độ chịu nén (Rb) [MPa]:"/>
                            <TextBox HorizontalAlignment="Left" Name="txtrb" Width="160"/>
                            <TextBlock Text="Modun đàn hồi (Eb) [MPa]:"/>
                            <TextBox HorizontalAlignment="Left" Name="txteb" Width="160"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Mác thép:"/>
                            <ComboBox Name="cbbMacthep" Width="220" HorizontalContentAlignment="Center">
                                <ComboBoxItem IsSelected="True">CI</ComboBoxItem>
                                <ComboBoxItem>CII</ComboBoxItem>
                                <ComboBoxItem>CIII</ComboBoxItem>
                                <ComboBoxItem>CIV</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text="Cường độ chịu nén và kéo (Rs,Rsc) [MPa]:"/>
                            <TextBox HorizontalAlignment="Left" Name="txtrs" Width="220"/>
                            <TextBlock Text="Modun đàn hồi (Es) [MPa]:"/>
                            <TextBox HorizontalAlignment="Left" Name="txtes" Width="220"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,97,10,0" RenderTransformOrigin="0.499,1.28" Height="128" Width="175">
                    <Button Name="SaveButton" Background="Blue" Content="Lưu vật liệu" Width="150" Margin="10,10,0,60" Height="24" />
                    <Button Name="ClearButton" Background="Blue" Content="Xóa dữ liệu" Width="150" Margin="-150,60,0,10" Height="30" />
                </StackPanel>

                <GroupBox Header="Danh sách vật liệu đã lưu" Margin="0,260,0,0">
                    <DataGrid Name="MaterialDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding clsVatLieu}" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Mác bê tông" />
                            <DataGridTextColumn Width="*" Header="cường độ chịu nén" />
                            <DataGridTextColumn Width="*" Header="Mác thép"  />
                            <DataGridTextColumn Width="*" Header="Cường độ chịu kéo"  />

                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </TabItem>

        <TabItem Header="Thông số Cột" Background="#8C00FF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="350"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Thông số tiết diện" Width="1000" HorizontalAlignment="Center" VerticalAlignment="Center" Height="186">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Name :" Height="18" Width="94" />
                                <TextBox Name="txtName" Width="200" Margin="10 0 0 0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Height="22" Width="92"> tiết diện cột :</TextBlock>
                                <TextBox Name="txttietdien" Width="200" Margin="10 10 0 0"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Tải trọng (N):" />
                                <TextBox Name="TxtTaiTrong" Width="200" Margin="25 10 0 0"/>
                            </StackPanel>

                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Mác bê tông :"/>
                                <ComboBox x:Name="cbbLK" Width="200" Margin="25 0 0 10">
                                    <ComboBoxItem IsSelected="True" Content="B15"/>
                                    <ComboBoxItem Content="B20"/>
                                    <ComboBoxItem Content="B25"/>
                                    <ComboBoxItem Content="B30"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" >
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Chiều dài cột(L) :" Height="28" Width="101" />
                                <TextBox x:Name="txtchieudaicot" Width="199" HorizontalContentAlignment="Center"/>


                            </StackPanel>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Momenx (Mx):" />
                                <TextBox Name="txtmomenx" Width="200" Margin="10 0 0 10" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="Momeny (My):" />
                                <TextBox Name="txtmomeny" Width="200" Margin="15 0 0 0"/>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </GroupBox>
                <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button x:Name="btnNhapTuRevit" Command="{Binding cmNhapEtab}" CommandParameter="{Binding ElementName=pgCLParameter}"  Content="Nhập từ Revit" Width="130" Margin="0,0,20,0"  Background="Blue" Foreground="White"/>
                    <Button x:Name="btnThem1" Command="{Binding cmLuuCot}" CommandParameter="{Binding ElementName=pgCLParameter}" Content="Lưu" Width="130" Background="Blue" Foreground="White"/>
                </StackPanel>
                <GroupBox Grid.Row="1" FontWeight="Bold" Header="Danh sách cột" >
                    <DataGrid Name="dtgColumn" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Tên" />
                            <DataGridTextColumn Width="*" Header="Tiết diện" />
                            <DataGridTextColumn Width="*" Header="Chiều cao" />
                            <DataGridTextColumn Width="*" Header="Tầng" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Header="Mặt Cắt" Background="#8C00FF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="/Resources/Anh/cotlechtam.png" Width="275" HorizontalAlignment="Left" VerticalAlignment="Top" Height="459" Margin="5,10,0,0" Grid.Column="1" Grid.RowSpan="2"/>
                <TextBlock Text="Thông số cột lệch tâm xiên" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="10">
                            <TextBlock Text="Tên cột" FontSize="13"/>
                            <TextBox FontSize="10" HorizontalAlignment="Left" Name="txtName1" Width="200" Margin="0 0 0 20"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Chiều rộng cột (b)" FontSize="13"/>
                            <TextBox FontSize="10" HorizontalAlignment="Left" Name="txtRongCot" Width="200" Margin="0 0 0 20"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Chiều cao cột (h)" FontSize="13"/>
                            <TextBox FontSize="10" HorizontalAlignment="Left" Name="txtChieuCao" Width="200" Margin="0 0 0 20"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <StackPanel Margin="10">
                            <TextBlock Text="Chiều rộng làm việc (bo)" FontSize="13"/>
                            <TextBox FontSize="10" HorizontalAlignment="Left" Name="txtbLamviec" Width="200" Margin="0 0 0 20"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Chiều cao làm việc (ho)" FontSize="13"/>
                            <TextBox FontSize="10" HorizontalAlignment="Left" Name="txthLamviec" Width="200" Margin="0 0 0 2"/>
                        </StackPanel>
                    </StackPanel>
                    <GroupBox Header="Danh sách vật liệu đã lưu" Margin="10" Height="270">
                        <DataGrid Name="dtgTietDien" AutoGenerateColumns="False" ItemsSource="{Binding clsTietDien}" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Header="Tên" Binding="{Binding Name}" />
                                <DataGridTextColumn Width="*" Header="Chiều rộng " Binding="{Binding ChieuRongCanh}" />
                                <DataGridTextColumn Width="*" Header="Chiều cao" Binding="{Binding DoDayCanh}"/>
                                <DataGridTextColumn Width="*" Header="Chiều rộng lv" Binding="{Binding ChieuCaoBung}" />
                                <DataGridTextColumn Width="*" Header="Chiều cao lv " Binding="{Binding DoDayBung}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </StackPanel>
                <Button Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" x:Name="btnThem" Content="Lưu" Width="130" Margin="0,368,0,0" HorizontalAlignment="Center" Background="Blue" Foreground="White" />
            </Grid>
        </TabItem>
        <TabItem Header="Tính toán" Background="#8C00FF">
            <Grid Margin="20,20,20,20">

                <GroupBox Header="Thông số tiết diện" HorizontalAlignment="Left" VerticalAlignment="Center" Height="496">
                    <StackPanel Margin="10 0 10 0">
                        <Label>Chọn cột cần tính</Label>
                        <ComboBox x:Name="cbbCotCanTinh">
                        </ComboBox>
                        <Label Margin="0 10 0 0">Chọn tiết diện cột</Label>
                        <ComboBox x:Name="cbbTietDien">
                        </ComboBox>
                        <TextBlock Text="Tải trọng (N):" Margin="0 10 0 0"/>
                        <TextBox Name="txtTaiTrong" Width="200"/>
                        <TextBlock Text="Momenx (Mx):" Margin="0 10 0 0"/>
                        <TextBox Name="txtMomenx" Width="200"/>
                        <TextBlock Text="Momeny (My):" Margin="0 10 0 0"/>
                        <TextBox Name="txtMomeny" Width="200"/>
                        <TextBlock Text="Chiều dài cột (L):" Margin="0 10 0 0"/>
                        <TextBox Name="txtDaiCot" Width="200" />
                        <TextBlock Text="Mác bê tông:" Margin="0 10 0 0"/>
                        <ComboBox Name="cbbmacbetong" Width="200"/>
                        <TextBlock Text="Mác thép:" Margin="0 10 0 0" />
                        <ComboBox Name="cbbmacthep" Width="200" Margin="0 10 0 0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Kết Quả" Margin="0,-1,50,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="485" Height="225">
                    <StackPanel Margin="10,0,10,0" Height="158">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                            <TextBlock Text="Diện tích cốt thép (Ast):"/>
                            <TextBox Name="txtAs" Width="150" Margin="30 0 0 0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="chọn số lượng thép bố trí"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Số lượng"  Width="100"/>
                            <TextBox Name="txtsoluong" Width="100" Margin="-100 25 0 0"/>
                            <TextBlock Text="Đường kính thép" Width="120" Margin="20,0,0,0"/>
                            <TextBox Name="txtduongkinh" Width="100" Margin="-120 25 0 0"/>
                            <TextBlock Text="Diện tích cốt thép (Ac)" Margin="20,0,0,0"/>
                            <TextBox Name="txtAc" Width="100" Margin="-120 25 0 0"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="566,248,0,0">
                    <Button Command="{Binding cmTinhToan}" CommandParameter="{Binding ElementName=pgTinhToan}" x:Name="btnTinhToan" Content="Tính toán" Width="120" Background="blue" Foreground="White"/>
                    <Button x:Name="Clear1Button" Content="Xóa dữ liệu" Width="120" Margin="10" Background="blue" Foreground="White"/>
                </StackPanel>

            </Grid>
        </TabItem>
<TabItem Header="Vẽ thép">
            <DockPanel LastChildFill="True" Background="AliceBlue">
                <Grid   DockPanel.Dock="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="340"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0">
                        <GroupBox Header="Thép chủ" FontSize="16" FontWeight="Bold" Margin="5,5,5,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock>Số cây thép theo phương X:</TextBlock>
                                <TextBox></TextBox>
                                <TextBlock>Đường kính thép phương X:</TextBlock>
                                <ComboBox Height="35" FontSize="14" Margin="10" ItemsSource="{Binding Diameters}" SelectedItem="{Binding StirrupDiameter}" 
              DisplayMemberPath="Name"/>
                                <TextBlock>Số cây thép theo phương Y:</TextBlock>
                               <TextBox></TextBox>
                                <TextBlock>Đường kính thép phương Y:</TextBlock>
                                <ComboBox Height="35" FontSize="14" Margin="10"/>
                            </StackPanel>

                        </GroupBox>
                    </Grid>
                    <GroupBox Header="Chiều dài neo và móc thép " FontSize="16" FontWeight="Bold" Margin="5 5 5 4"  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
                            <StackPanel>
                                <TextBlock Margin="0,10,0,0">Chọn kiểu neo thép :</TextBlock>
                                <ComboBox Margin="10"></ComboBox>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock>Lan =</TextBlock>
                                    <TextBox Width="40" Margin="7,0,0,0" TextAlignment="Center"></TextBox>
                                    <TextBlock Margin="5,0,0,0">*Ø</TextBlock>
                                </StackPanel>
                                <TextBlock Margin="0 10 0 0">Móc trên :</TextBlock>
                                <ComboBox FontSize="14" Margin="10"/>
                                <TextBlock>Móc dưới :</TextBlock>
                                <ComboBox FontSize="14" Margin="10"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Thép đai" FontSize="16" FontWeight="Bold" Margin="5"  Grid.Column="1" Grid.RowSpan="3" >
                        <StackPanel Orientation="Vertical">
                            <TextBlock >Đường kính thép đai:</TextBlock>
                            <ComboBox Margin="10" FontSize="14"></ComboBox>
                            <TextBlock Margin="0,10,0,0">Chọn kiểu thép đai :</TextBlock>
                            <ComboBox ItemsSource="{Binding }"
          SelectedItem="{Binding diai}"
          Margin="10"></ComboBox>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="180,0,0,0">Lt</TextBlock>
                                <TextBlock HorizontalAlignment="Center" Margin="80,0,0,0">Ln</TextBlock>
                                <TextBlock Margin="80,0,0,0">Lt</TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>Đoạn phân bố:</TextBlock>
                                <TextBox Width="60" Margin="45,0,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                                <TextBox Width="60" Margin="37,0,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                                <TextBox Width="60" Margin="35,0,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Margin="0,10,0,0">Khoảng cách :</TextBlock>
                                <TextBox Width="60"  Margin="50,4,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                                <TextBox Width="60" Margin="37,4,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                                <TextBox Width="60" Margin="35,4,0,0" BorderThickness="2" TextAlignment="Center"></TextBox>
                            </StackPanel>
                            <Image Source="/resources/Images/thepdai.png" Height="300" Margin="0 10 0 0"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="18">Chiều dày lớp bảo vệ c =</TextBlock>
                                <TextBox Width="60" Height="30" TextAlignment="Center" ></TextBox>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Hình ảnh" FontSize="16" FontWeight="Bold" Margin="5"  Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"/>
                </Grid>
                <Grid DockPanel.Dock="Bottom">
                    <Button  Width="110" Height="30" Content="OK" Command="{Binding OkCommand}" HorizontalAlignment="Right" Margin="0 0 250 0 "/>
                    <Button  Width="110" Height="30" Content="Cancel" Command="{Binding CloseCommand}"  HorizontalAlignment="Right" Margin="0 0 50 0 "/>
                </Grid>
            </DockPanel>
        </TabItem>
    </TabControl>


</Window>
