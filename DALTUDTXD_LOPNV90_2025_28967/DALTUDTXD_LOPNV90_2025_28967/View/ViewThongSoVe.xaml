<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewThongSoVe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="Thông số vẽ" Height="350" Width="250">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/DALTUDTXD_LOPNV90_2025_28967;component/resources/style/Dictionary1.xaml" />
    </Window.Resources>
    <Grid>
        <GroupBox Header="Thiết lập chung">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Thép đai:" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Phân bố:" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Neo thép:" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Lan:" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Lớp bảo vệ:" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                <ComboBox Grid.Column="1" Grid.Row="0" Margin="10"></ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="1" Margin="10"></ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="2" Margin="10"></ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="3" Margin="10"></ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="4" Margin="10"></ComboBox>
                <StackPanel Grid.ColumnSpan="2" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Width="60" Height="30" Content="Đồng ý"  Style="{StaticResource ButtonStyle}"></Button>
                    <Button Width="60" Height="30" Content="Hủy bỏ" Margin="20 0 0 0" Style="{StaticResource ButtonStyle}"></Button>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>

