<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewVeThep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="Chọn thép" Height="350" Width="620">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DALTUDTXD_LOPNV90_2025_28967;component/resources/style/Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True" Background="AliceBlue">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="60" Height="30" Content="Vẽ" Style="{StaticResource ButtonStyle}"></Button>
            <Button Width="60" Height="30" Content="Hủy" Margin="20 0 20 0" Style="{StaticResource ButtonStyle}"></Button>
        </StackPanel>
        <GroupBox Header="Thép chủ" DockPanel.Dock="Left" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Cột"></TextBlock>
                    <ComboBox Margin="10 -2 0 0 " Width="60"></ComboBox>
                   
                </StackPanel>
                <TextBlock Grid.Column="0"  Grid.Row="0" Text="As(mm2):" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 5 0"></TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" Width="100" Height="27" Background="White" Margin="10 0"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Số thanh thép phương X:"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Đường kính thép phương X:"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Số thanh thép phương Y:"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Đường kính thép phương Y:"></TextBlock>
                <TextBox Grid.Column="1" Grid.Row="1" Margin="5" ></TextBox>
                <TextBox Grid.Column="1" Grid.Row="3" Margin="5"></TextBox>
                <ComboBox Grid.Column="1" Grid.Row="2" Margin="10 12" ></ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="4" Margin="10 12" ></ComboBox>
            </Grid>
            
        </GroupBox>
<GroupBox DockPanel.Dock="Right" Header="Hình ảnh" Margin="5">
<Canvas></Canvas>
</GroupBox>
        
        
    </DockPanel>
</Window>
