<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewThongSoCot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="ViewThongSoCot" Height="620" Width="1200">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DALTUDTXD_LOPNV90_2025_28967;component/resources/style/Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10" Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
       
        <GroupBox Header="Thông số tính toán" Margin="0,10,5,350">

            <Grid >

                <StackPanel HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center"  Text="N (KN) :" Height="25" Width="100" />
                        <TextBox Text="{Binding TaiTrong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Width="100"  Margin="0 0 0 0"  Style="{StaticResource TextBoxStyle}" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center" Text="Mx (KN.m) :" Height="25" Width="100"/>
                        <TextBox Text="{Binding MomenX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Width="100"  Margin="0 0 0 0"  Style="{StaticResource TextBoxStyle}" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center"  Text="My (KN.m):" Height="25" Width="100"/>
                        <TextBox Text="{Binding MomenY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Width="100"  Margin="0 0 0 0"  Style="{StaticResource TextBoxStyle}" TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Cột " Margin="0,250,5,150">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center" Height="25" Width="100" Margin="0,0,0,0" Text="Loại liên kết:"/>
                        <ComboBox Width="100" Height="25" Margin="0 0 0 0"
                          ItemsSource="{Binding DanhSachLienKet}"
                          SelectedItem="{Binding LienKetDangChon, Mode=TwoWay}"  HorizontalContentAlignment="Center"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center"  Text="Hệ số (Ψ):" Height="25" Width="100"/>
                        <TextBox Width="100" Margin="0 0 0 0"
                                 Text="{Binding HeSoPsi, Mode=TwoWay}"  Style="{StaticResource TextBoxStyle}" TextAlignment="Center"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50">
                        <TextBlock VerticalAlignment="Center"  Text="Cột:" Height="25" Width="100"/>
                        <ComboBox ItemsSource="{Binding DanhSachCotTuRevit}"
          SelectedItem="{Binding CotDangChon}"
          DisplayMemberPath="Name"
          Margin="0,0,0,0" Height="25" Width="100" />


                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center"  Margin="0,480,0,0" Width="240">
            <Button x:Name="btnNhapTuRevit"
                     Command="{Binding cmNhapRevit}"
                     Content="Nhập từ Revit"
                     Width="110" Height="25"
                     Margin="0,0,20,0"
                     Style="{StaticResource ButtonStyle}" />
            <Button x:Name="btnnoiluc" 
                     Content="Thêm nội lực" 
                     Width="110" Height="25"
                     Margin="0,0,20,0"
                     Style="{StaticResource ButtonStyle}"
                     Command="{Binding cmThemNoiLuc}" />

        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,520,0,0" Width="240">
            <Button Content="Xóa cột"
            Command="{Binding cmXoaCot}"
            Width="110" Height="25"
            Margin="0,0,20,0"
            Style="{StaticResource ButtonStyle}" />
            <Button x:Name="btntinhtoan"
                    Content="Tính Toán"
                    Width="115" Height="25"
                    Margin="0,0,20,0"
                    Style="{StaticResource ButtonStyle}"
                    Click="btntinhtoan_Click"/>
        </StackPanel>
        <GroupBox Header="Danh sách cột" Grid.Column="1" Margin="0,10,0,0">
            <DataGrid ItemsSource="{Binding DanhSachCotDaGanNoiLuc}"
              SelectedItem="{Binding SelectedCot}"
              AutoGenerateColumns="False">

                <!-- Style canh giữa cho toàn bộ TextBlock -->
                <DataGrid.Resources>
                   
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên" Width="*" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Loại liên kết" Width="*" Binding="{Binding LienKet}" />
                    <DataGridTextColumn Header="Hệ số Ψ" Width="80" Binding="{Binding PsiDisplay}" />
                    <DataGridTextColumn Header="b (mm)" Width="*" Binding="{Binding Width}" />
                    <DataGridTextColumn Header="L (mm)" Width="*" Binding="{Binding Height}" />
                    <DataGridTextColumn Header="h (mm)" Width="*" Binding="{Binding Length}" />
                    <DataGridTextColumn Header="N (KN)" Width="*" Binding="{Binding Load}" />
                    <DataGridTextColumn Header="MX (KN.m)" Width="*" Binding="{Binding MomentX}" />
                    <DataGridTextColumn Header="MY (KN.m)" Width="*" Binding="{Binding MomentY}" />
                </DataGrid.Columns>

            </DataGrid>
        </GroupBox>


    </Grid>
</Window>
