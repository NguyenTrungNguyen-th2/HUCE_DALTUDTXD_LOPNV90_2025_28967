<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewTinhToan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="ViewTinhToan" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <GroupBox Header="Danh sách cột " Grid.Column="1" Margin="0,10,0,0" >
            <DataGrid ItemsSource="{Binding DanhSachCotHienThi}"
                      AutoGenerateColumns="False">
                <DataGrid.Resources>
                    
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Tên" Binding="{Binding Name}" />
                    <DataGridTextColumn Width="*" Header="Loại liên kết" Binding="{Binding LienKet}" />
                    <DataGridTextColumn Width="60" Header="Ψ" Binding="{Binding Psi}" />
                    <DataGridTextColumn Width="*" Header="b (mm)" Binding="{Binding Width}" />
                    <DataGridTextColumn Width="*" Header="h (mm)" Binding="{Binding Height}" />
                    <DataGridTextColumn Width="*" Header="L (mm)" Binding="{Binding Length}" />
                    <DataGridTextColumn Width="*" Header="As tính toán" Binding="{Binding AsValue}" />
                    <DataGridTextColumn Width="*" Header="Chọn thép" Binding="{Binding SelectedRebarText}" />
                    <DataGridTextColumn Width="*" Header="As thực tế" Binding="{Binding SelectedRebarArea}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
