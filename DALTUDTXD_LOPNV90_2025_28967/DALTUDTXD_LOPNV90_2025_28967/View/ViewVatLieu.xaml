<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewVatLieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="ViewVatLieu" Height="500" Width="1000">
    <Grid Margin="10" Background="AliceBlue ">
       
        <TextBlock Text="Thông Tin Vật Liệu" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="450,10,0,20" Grid.ColumnSpan="2"/>
        <GroupBox Header="Thông số vật liệu" Margin="0,60,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Grid>
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Mác bê tông:"/>
                    <ComboBox ItemsSource="{Binding ConcreteGrades}"
                   SelectedItem="{Binding SelectedConcrete}"
                   Width="160" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="Cường độ chịu nén (Rb) [MPa]:"/>
                    <TextBox Text="{Binding Rb}" Width="160"/>
                    <TextBlock Text="Modun đàn hồi (Eb) [MPa]:"/>
                    <TextBox Text="{Binding Eb}" Width="160"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Mác thép:"/>
                    <ComboBox ItemsSource="{Binding SteelGrades}"
                   SelectedItem="{Binding SelectedSteel}"
                   Width="220" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="Cường độ chịu nén và kéo (Rs,Rsc) [MPa]:"/>
                    <TextBox Text="{Binding Rs}" Width="220"/>
                    <TextBlock Text="Modun đàn hồi (Es) [MPa]:"/>
                    <TextBox Text="{Binding Es}" Width="220"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" 
                 HorizontalAlignment="Right" 
                 VerticalAlignment="Top" 
                 Margin="0,170,20,0" Grid.Column="1">

            <Button Command="{Binding SaveCommand}" 
                    Content="Lưu vật liệu" 
                    Width="120" Margin="5"/>

            <Button Command="{Binding ClearCommand}" 
                 Content="Xóa tất cả" 
                 Width="120" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,130,50,0" Grid.Column="1">
            <Button Click="ChuyenSangCot_Click">chuyển sang nhập dữ liệu cột</Button>
        </StackPanel>
            <GroupBox Header="Danh sách vật liệu đã lưu" Margin="0,200,0,0" Grid.ColumnSpan="2">
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding clsVatLieu}" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Mác bê tông" Binding="{Binding ConcreteGrade}" />
                    <DataGridTextColumn Width="*" Header="Cường độ chịu nén (Rb)" Binding="{Binding Rb}" />
                    <DataGridTextColumn Width="*" Header="Modun đàn hồi (Eb)" Binding="{Binding Eb}" />
                    <DataGridTextColumn Width="*" Header="Mác thép" Binding="{Binding SteelGrade}" />
                    <DataGridTextColumn Width="*" Header="Cường độ chịu kéo (Rs)" Binding="{Binding Rs}" />
                    <DataGridTextColumn Width="*" Header="Modun đàn hồi (Es)" Binding="{Binding Es}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
