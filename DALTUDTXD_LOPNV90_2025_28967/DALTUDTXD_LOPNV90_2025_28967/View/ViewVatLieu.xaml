<Window x:Class="DALTUDTXD_LOPNV90_2025_28967.View.ViewVatLieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTUDTXD_LOPNV90_2025_28967.View"
        mc:Ignorable="d"
        Title="ViewVatLieu" Height="429" Width="465">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DALTUDTXD_LOPNV90_2025_28967;component/resources/style/Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10" >

        <TextBlock Text="Thông Tin Vật Liệu" FontSize="24" FontWeight="Bold" Height="333" Width="229" HorizontalAlignment="Center" />
        <GroupBox Header="Thông số vật liệu" Margin="0,86,0,10">
            <Grid>
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Mác bê tông:"/>
                    <ComboBox ItemsSource="{Binding ConcreteGrades}"
                   SelectedItem="{Binding SelectedConcrete}"
                   Width="160" Height="25" HorizontalContentAlignment="Center" />
                    <TextBlock Text="Cường độ chịu nén (Rb) [MPa]:"/>
                    <TextBox Text="{Binding Rb}" Width="160"/>
                    <TextBlock Text="Modun đàn hồi (Eb) [MPa]:"/>
                    <TextBox Text="{Binding Eb}" Width="160"  />
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Width="230" Margin="200,0,0,0">
                    <TextBlock Text="Mác thép:"/>
                    <ComboBox ItemsSource="{Binding SteelGrades}"
                              SelectedItem="{Binding SelectedSteel}"
                              Width="160" Height="25 " HorizontalAlignment="Left" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="Cường độ chịu nén và kéo (Rs,Rsc) [MPa]:"/>
                    <TextBox Text="{Binding Rs}" Width="160" HorizontalAlignment="Left"  />
                    <TextBlock Text="Modun đàn hồi (Es) [MPa]:"/>
                    <TextBox Text="{Binding Es}" Width="160"  HorizontalAlignment="Left" />
                </StackPanel>

                <StackPanel  Orientation="Horizontal"
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top" 
                             Margin="80,170,0,0" >

                    <Button Command="{Binding SaveCommand}" 
                            Content="Lưu vật liệu" 
                            Width="120" Height="25" Margin="5" Style="{StaticResource ButtonStyle}"/>

                    <Button Command="{Binding ClearCommand}" 
                            Content="Xóa tất cả" 
                            Width="120" Height="25" Margin="5" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>

        </GroupBox>




    </Grid>
</Window>
